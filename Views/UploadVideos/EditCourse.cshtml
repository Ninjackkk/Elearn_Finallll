@model Course

@{
    ViewData["Title"] = "Edit Course";
}
<h2>Edit Course</h2>


<form asp-action="EditCourse" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price" class="control-label"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Thumbnail" class="control-label"></label>
        <input asp-for="Thumbnail" class="form-control" readonly />
        <span asp-validation-for="Thumbnail" class="text-danger"></span>
    </div>
    @if (!string.IsNullOrEmpty(Model.Thumbnail))
    {
        <div class="form-group">
            <label>Current Thumbnail</label>
            <div>
                <img src="~/@Model.Thumbnail" alt="Current Thumbnail" style="max-width: 100px; max-height: 100px;" />
            </div>
        </div>
    }

    <div class="form-group">
        <label for="newThumbnail">Upload New Thumbnail</label>
        <input type="file" class="form-control" id="newThumbnail" name="newThumbnail" />
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>


<div>
    <a asp-action="ShowCourses">Back to list</a>
</div>
